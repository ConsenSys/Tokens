{
  "name": "UpchainTokens",
  "version": "0.4.1",
  "description": "Upchain Token Demo",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "testrpc-snapshot": "./scripts/create-snapshot.sh",
    "testrpc-revert": "./scripts/revert-snapshot.sh",
    "testrpc-reset": "pm2 restart testrpc && truffle migrate --reset-all",
    "jshint": "jshint app/javascripts",
    "jscs": "jscs app/javascripts",
    "lint": "npm run jshint && npm run jscs",
    "test": "npm run test-contract && npm run test-gui",
    "pretest-contract": "npm run testrpc-reset",
    "test-contract": "truffle test",
    "truffle-serve": "pm2 start truffle -- serve -p 9090",
    "truffle-serve-stop": "pm2 stop truffle",
    "pretest-gui": "npm run testrpc-reset && npm run truffle-serve",
    "posttest-gui": "npm run truffle-serve-stop",
    "test-gui": "cd test-gui && groovy -Dgroovy.grape.report.downloads=false ./gui-test.groovy && cd ..",
    "testrpc": "pm2 start testrpc",
    "start": "pm2 start truffle -- serve"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Upchain/UpchainTokens.git"
  },
  "keywords": [
    "template",
    "ethereum",
    "solidity"
  ],
  "author": "Dmitry Palchun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Upchain/UpchainTokens/issues"
  },
  "private": true,
  "homepage": "https://github.com/Upchain/UpchainTokens#readme",
  "devDependencies": {
    "jquery": "^3.1.0",
    "jscs": "^3.0.4",
    "jshint": "^2.9.2",
    "pm2": "^1.1.3",
    "solc": "^0.3.6",
    "solc-cli": "^0.3.0"
  },
  "dependencies": {
    "ethereumjs-testrpc": "^2.2.7",
    "truffle": "^2.0.8"
  }
}
